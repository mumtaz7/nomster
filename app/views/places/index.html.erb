<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'slider1.jpg', class: 'img-responsive' %>
      <div class="carousel-caption">
        Need a sugar rush?
      </div>
    </div>
      <div class="item">
      <%= image_tag 'slider2.jpg', class: 'img-responsive' %>
    <div class="carousel-caption">
      NYC's best bakeries!
    </div>
      </div>
        <div class="item">
        <%= image_tag 'slider3.jpg', class: 'img-responsive' %>
    <div class="carousel-caption">
      Get something to sweeten up your day!
    </div>
  </div>
</div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<% @places.each do |place| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1><br />
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p><br />


<% if place.comments.present? %>
    <div class="col-xs-12">
      <blockquote>
        <% if place.comments.order(:id).last.humanized_rating.present? %>
          <b><%= place.comments.order(:id).last.humanized_rating %></b> -
        <% end %>
        <%= place.comments.order(:id).last.message %>
        <small><%= place.comments.last.user.email %></small>
      </blockquote>
    <% end %>


  <% if place.photos.present? %>
    <div class="col-xs-6">
       <% if place.photos.last.picture.present? %>
          <b><%= image_tag place.photos.last.picture, :class => 'img-responsive' %></b>
       <% end %>
       <%= place.photos.last.caption %>
       <% end %>
        
    </div>
  </div>
    <br class="clear" />
      <% if place.user.present? %>
      <small><%= place.user.email %></small>
    <% end %>
</div>

<% end %>

<%= will_paginate @places, :page_links => false %>
